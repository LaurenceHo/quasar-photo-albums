{
  "name": "fastify-server",
  "version": "1.0.0",
  "main": "dist/worker.js",
  "files": [
    "dist/**/*.*",
    "package.json"
  ],
  "type": "module",
  "scripts": {
    "format": "prettier --write src/ test/ --ignore-unknown --ignore-path .gitignore",
    "lint": "eslint --fix",
    "init:s3": "bun src/init-s3.ts",
    "start:wrangler": "wrangler dev --local",
    "test:server": "vitest run",
    "types:server": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/s3-request-presigner": "^3.937.0",
    "@hono/zod-validator": "^0.7.5",
    "dotenv": "17.2.3",
    "google-auth-library": "10.5.0",
    "hono": "^4.6.12",
    "jsonwebtoken": "^9.0.2",
    "radash": "^12.1.1",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "@eslint/js": "^9.39.1",
    "@tsconfig/node22": "^22.0.5",
    "@tsconfig/strictest": "^2.0.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.19.1",
    "aws-sdk-client-mock": "^4.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "form-auto-content": "^3.2.1",
    "globals": "^16.5.0",
    "lint-staged": "16.2.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "4.0.13"
  },
  "engines": {
    "node": "^22",
    "npm": ">= 10",
    "yarn": ">= 4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
