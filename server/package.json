{
  "name": "fastify-server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "files": [
    "dist/**/*.*",
    "package.json"
  ],
  "type": "module",
  "scripts": {
    "build:server": "bun esbuild.config.mjs",
    "format": "prettier --write src/ test/ --ignore-unknown --ignore-path .gitignore",
    "lint": "eslint --fix",
    "serverless:deploy": "serverless deploy",
    "serverless:deploy:prod": "serverless deploy --stage prod",
    "start:server": "rimraf dist && bun build:server && bun dist/index.js",
    "test:server": "vitest run --coverage",
    "types:server": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.730.0",
    "@aws-sdk/client-s3": "^3.730.0",
    "@aws-sdk/lib-dynamodb": "^3.730.0",
    "@fastify/auth": "5.0.2",
    "@fastify/cookie": "11.0.2",
    "@fastify/cors": "10.0.2",
    "@fastify/helmet": "13.0.1",
    "@fastify/multipart": "9.0.2",
    "@fastify/rate-limit": "10.2.2",
    "@fastify/throttle": "3.0.2",
    "@tsconfig/node22": "^22.0.0",
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.4.7",
    "electrodb": "3.0.1",
    "fastify": "5.2.1",
    "fastify-plugin": "5.0.1",
    "google-auth-library": "^9.15.0",
    "jsonwebtoken": "^9.0.2",
    "radash": "^12.1.0",
    "serverless-http": "^3.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@tsconfig/node20": "^20.1.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/aws-lambda": "^8.10.147",
    "@types/jsonwebtoken": "^9.0.7",
    "@vitest/coverage-v8": "3.0.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "10.0.1",
    "form-auto-content": "^3.2.1",
    "globals": "^15.14.0",
    "lint-staged": "^15.4.1",
    "rimraf": "^6.0.1",
    "serverless": "3.39.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-plugin-typescript": "^2.1.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "3.0.1"
  },
  "engines": {
    "node": "^22",
    "npm": ">= 10",
    "yarn": ">= 4"
  },
  "lint-staged": {
    "*.ts": ["eslint --fix", "prettier --write src/ test/ --ignore-unknown --ignore-path .gitignore"]
  }
}
